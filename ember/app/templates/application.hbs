<img src="assets/img/cover.png" class="bg">
<header class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="banner">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
        <span class="sr-only">Toggle Nav</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="/" class="navbar-brand logo"><img src="assets/img/logo-tiny.png"></a>
    </div>
    <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
      <ul class="nav navbar-nav">
        <li class="active">
          <a href="#">Register</a>
        </li>
        <li>
          {{#if session.isAuthenticated}}
            <button {{ action 'invalidateSession' }}>Logout</button>
          {{else}}
            {{#link-to 'pets'}}Login{{/link-to}}
          {{/if}}
        </li>
        <li>
          {{link-to 'Pets' 'pets.index'}}
        </li>
        <li>
          {{link-to 'New' 'pets.new'}}
        </li>
        <li>
          {{link-to 'Lost' 'losts.index'}}
        </li>
        <li>
          {{link-to 'Found' 'findings.index'}}
        </li>
      </ul>
      <form class="navbar-form navbar-right" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search...">
        </div>
        <button type="submit" class="btn btn-info">Whistle</button>
      </form>
    </nav>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 section">
      {{outlet}}
    </div>
  </div>
</div>

<footer class="footer navbar-inverse navbar-fixed-bottom">
  <div class="container text-center">
    <!-- <p class="well">Self-updating ticker for pets recently found, perhaps</p> -->
    <p id="legal"><small>AmberPets &copy; 2015</small></p>
  </div>
</footer>
